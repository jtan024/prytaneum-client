{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "source": {
        "include": ["src/"],
        "includePattern": ".+\\.(t|j)s(doc|x)?$",
        "excludePattern": ".+\\.(test|spec).ts"
    },
    "sourceType": "module",
    "plugins": [
        "plugins/markdown",
        "better-docs/category",
        "better-docs/typescript",
        "jsdoc-mermaid"
    ],
    "recurseDepth": 10,
    "opts": {
        "template": "node_modules/better-docs",
        "destination": "docs/html",
        "recurse": true,
        "readme": "README.md"
    }
}
